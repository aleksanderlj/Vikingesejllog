<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vikingesejllog">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/helgeask_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/helgeask_logo_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".note.NoteDetails" />
        <activity android:name=".note.NoteList">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".togt.CreateTogt" />
        <activity android:name=".MainActivity" />
        <activity android:name=".note.CreateNote" />
        <activity android:name=".etape.CrewList" />
        <activity android:name=".togt.TogtList" />
        <activity android:name=".etape.CreateEtape" />
        <activity android:name=".note.AudioPlayer" />
        <activity android:name=".note.AudioRecorder" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.vikingesejllog.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>
</manifest>