<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/list_selector_background"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/guideline_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/note_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/note_time"
                android:layout_toEndOf="@+id/note_wind_text"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/note_sailstilling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/note_sailstilling_text"
                android:layout_toEndOf="@+id/note_sailstilling_text"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/note_rowers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/note_sailstilling_text"
                android:layout_toEndOf="@+id/note_sailstilling_text"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/note_sailforing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/note_sailstilling"
                android:layout_toEndOf="@+id/note_sailstilling_text"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/note_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/note_wind"
                android:layout_toEndOf="@+id/note_wind_text"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/note_wind_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/note_time"
                android:layout_marginEnd="8dp"
                android:text="Vind"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/note_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/note_course_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/note_wind_text"
                android:text="Kurs"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/note_sailstilling_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/note_wind"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/guideline_center"
                android:text="S. stilling"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/note_rowers_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/note_sailstilling_text"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/guideline_center"
                android:text="Roere"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/note_sailforing_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/note_sailstilling_text"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/guideline_center"
                android:text="S. fÃ¸ring"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/note_time"
                android:layout_alignBottom="@+id/note_time"
                android:layout_marginStart="20dp"
                android:layout_toStartOf="@+id/note_rowers_text"
                android:layout_toEndOf="@+id/note_time"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/camera_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/cam18" />

                <ImageView
                    android:id="@+id/comment_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/note18" />

                <ImageView
                    android:id="@+id/audio_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/mic24" />
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>