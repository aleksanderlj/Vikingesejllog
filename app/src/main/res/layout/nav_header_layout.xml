        android:layout_marginTop="40dp"
        android:fontFamily="@font/montserrat"
        android:paddingTop="16dp"
        android:text="Oversigt over togter"
        android:textColor="#152569"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addNewTogt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/buttonbg"
        android:text="TilfÃ¸j ny togt"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nav_head_username"
        app:layout_constraintTop_toBottomOf="@+id/nav_head_username" />

</androidx.constraintlayout.widget.ConstraintLayout>