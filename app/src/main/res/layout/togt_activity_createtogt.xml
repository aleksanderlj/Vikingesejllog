<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50" />

    <ImageView
        android:id="@+id/createTogtArrDestinBox"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_create_note" />

    <ImageView
        android:id="@+id/createTogtDepartureArrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="@+id/createTogtArrDestinBox"
        app:layout_constraintTop_toTopOf="@+id/createTogtArrDestinBox"
        app:srcCompat="@drawable/path_white" />

    <ImageView
        android:id="@+id/createTogtDestinationPin"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/createTogtArrDestinBox"
        app:layout_constraintStart_toStartOf="@+id/createTogtArrDestinBox"
        app:srcCompat="@drawable/location_red" />

    <EditText
        android:id="@+id/createTogtDepatureEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="@null"
        android:hint="Afrejse"
        app:layout_constraintBottom_toTopOf="@+id/createTogtDottedLine"
        app:layout_constraintEnd_toEndOf="@+id/createTogtDottedLine"
        app:layout_constraintStart_toEndOf="@+id/createTogtDepartureArrow"
        app:layout_constraintTop_toTopOf="@+id/createTogtArrDestinBox" />

    <Button
        android:id="@+id/createTogtAfbrydBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:background="@drawable/btn_create_note_afbryd"
        android:text="Afbryd"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_middle"
        app:layout_constraintStart_toStartOf="@+id/guideline_left" />

    <Button
        android:id="@+id/createTogtAccepterBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_create_note_accepter"
        android:text="Accepter"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/createTogtAfbrydBtn"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_middle" />

    <EditText
        android:id="@+id/createTogtArrivalEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="@null"
        android:hint="Ankomst"
        app:layout_constraintBottom_toBottomOf="@+id/createTogtArrDestinBox"
        app:layout_constraintEnd_toEndOf="@+id/createTogtDottedLine"
        app:layout_constraintStart_toEndOf="@+id/createTogtDestinationPin"
        app:layout_constraintTop_toBottomOf="@+id/createTogtDottedLine" />

    <ImageView
        android:id="@+id/createTogtDottedLine"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/createTogtArrDestinBox"
        app:layout_constraintEnd_toEndOf="@+id/createTogtArrDestinBox"
        app:layout_constraintStart_toStartOf="@+id/createTogtArrDestinBox"
        app:layout_constraintTop_toTopOf="@+id/createTogtArrDestinBox"
        app:srcCompat="@drawable/dotted_line" />

    <ImageView
        android:id="@+id/createTogtUnderline"
        android:layout_width="0dp"
        android:layout_height="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/createTogtArrDestinBox"
        app:layout_constraintEnd_toEndOf="@+id/createTogtArrDestinBox"
        app:layout_constraintStart_toStartOf="@+id/createTogtArrDestinBox"
        app:srcCompat="@android:color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>